<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE en-note SYSTEM "http://xml.evernote.com/pub/enml2.dtd">
<en-note>
    <div style="width:90%; max-width:600px; margin:0px auto;padding:5px; font-size:12pt; font-family:Times">
        <a href="{{ book.alt }}" style="text-decoration:none; color: #000;">
            <h2 style="font-size:18pt; text-align:right;">{{ book.title }}</h2>
        </a>
        <h5 style="font-size:12pt; text-align:right; color:gray;">{{ book.author }}</h5>
    {% for chapter in notes %}
        {% if chapter != '__DEFAULT__' %}
        <div style="font-size:14pt; text-align:center; margin-top:0.5em; margin-bottom:0.3em;">
            <div style="position:relative; z-index:-1; top:0.7em; height:2px; max-height:2px;border-top:1px dotted gray; border-bottom:1px dotted gray;">&nbsp;</div>
            <span style="font-weight:bold; background-color:white;position:relative;">{{ chapter }}</span>
        </div>
        {% endif %}
        {% for note in notes[chapter] %}
        <div style="padding-top:0.5em; padding-bottom:0.5em; border-top:1px dotted lightgray;">
            <div style="font-size:10pt; margin-bottom:0.2em;">
                <div style="display:inline-block; width:0.25em; height:0.9em;margin-right:0.5em; background-color:rgb(100,100,100);">&nbsp;</div>
                <a href="{{ note.alt }}" style="text-decoration:none">
                    <span style="color:darkgray">{{ note.created.strftime('%Y-%m-%d %H:%M:%S') }}</span>
                </a>
            </div>
            <div style="font-size:12pt;"><span>{{ note.content_html|safe }}</span></div>
        </div>
        {% endfor %}
    {% endfor %}
        <div style="margin-top:2em; margin-bottom:1em">
            <hr style="height:2px; border:0; background-color:#ddd;" />
            <span style="font-size:10pt; color:gray;">Generated by Everbean at {{ created.strftime('%Y-%m-%d %H:%M:%S') }}</span>
        </div>
    </div>
</en-note>